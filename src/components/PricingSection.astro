---
const methodItems = [
  "Curated swipe file of 500+ winning supplement ads updated monthly",
  "JSON profile converter — turn any winning ad into a replicable blueprint",
  "AI image generator walkthroughs (Midjourney, DALL-E, Flux, and more)",
  "Ads organized by niche: protein, greens, pre-workout, nootropics, fat burners, collagen",
  "Creative angle breakdowns — hooks, layouts, color psychology, copy frameworks",
  "Ad format templates for Meta, TikTok, Google, and YouTube",
  "Creative testing framework to find winners faster",
];

const dfyItems = [
  "Custom swipe file curated for your specific supplement niche",
  "JSON profiles built from your top competitors' winning ads",
  "AI-generated creative pack — 50+ ready-to-test ad variations",
  "Ad copy written for your brand using proven supplement angles",
  "Campaign structure recommendations for Meta and TikTok",
  "Creative testing roadmap designed for your budget",
  "1-on-1 strategy call with Cam to map your first 90 days of creatives",
  "30 days of direct support to optimize your creative pipeline",
];
---

<section id="pricing" class="bg-[#0a0a0a] px-[5%] py-12 md:py-20 scroll-mt-4">
  <div class="mx-auto max-w-3xl">
    <p class="mb-4 text-center text-xs font-bold uppercase tracking-widest text-[#777]">
      THE DECISION THAT CHANGES EVERYTHING
    </p>
    <h2 class="mb-4 text-center font-heading text-2xl font-bold leading-tight tracking-heading text-[#fff] md:text-4xl">
      You're finally getting a shot at producing winning supplement ads on demand.
    </h2>
    <p class="mx-auto mb-12 max-w-xl text-center text-lg leading-relaxed text-[#999]">
      Stop guessing. Start generating. Supplement Ads gives you the swipe file, the AI workflows, and the system to scale your creatives.
    </p>

    <!-- Method Card -->
    <div class="mb-8 overflow-hidden rounded-2xl border border-[#2a2a2a] bg-[#131313]">
      <div class="p-6 md:p-10">
        <h3 class="mb-1 font-heading text-xl font-bold tracking-heading text-[#fff] md:text-2xl">
          Supplement Ads
        </h3>
        <p class="mb-6 text-sm text-[#777]">
          The complete swipe file + AI creative system
        </p>

        <!-- Price -->
        <div class="mb-2 flex items-baseline gap-3">
          <span class="text-lg text-[#555] line-through">$497</span>
          <span class="text-4xl font-bold text-[#fff] md:text-5xl">$297</span>
        </div>
        <p class="mb-6 max-w-[220px] text-sm text-[#777]">
          One-time payment. Lifetime access.
        </p>

        <!-- Discount badge -->
        <p class="mb-8 text-sm font-semibold text-cta-yellow">
          Launch pricing - limited time only
        </p>

        <!-- Checklist items -->
        <h4 class="mb-4 font-bold text-[#fff]">Here's what you're getting:</h4>
        <ul class="mb-8 flex flex-col gap-2.5">
          {methodItems.map((item) => (
            <li class="flex items-center gap-3">
              <svg class="h-4 w-4 flex-shrink-0 text-cta-green" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20 6 9 17l-5-5" />
              </svg>
              <span class="text-[#bbb]">{item}</span>
            </li>
          ))}
          <li class="flex items-center gap-3">
            <svg class="h-4 w-4 flex-shrink-0 text-cta-green" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 6 9 17l-5-5" />
            </svg>
            <span class="text-[#bbb]">
              <strong class="text-cta-yellow">FREE BONUS</strong>{" "}
              Complete supplement niche research database with 50+ profitable sub-niches and trending ingredients
            </span>
          </li>
        </ul>

        <!-- Included info -->
        <div class="mb-6 flex flex-col gap-2 border-t border-[#2a2a2a] pt-6">
          <div class="flex items-center justify-between">
            <span class="text-sm text-[#777]">Includes:</span>
            <span class="text-sm font-bold text-[#fff]">
              Full swipe file + JSON profiles + AI walkthroughs
            </span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-[#777]">Last updated:</span>
            <span class="text-sm font-bold text-[#fff]">February 2026</span>
          </div>
        </div>

        <!-- CTA -->
        <button
          type="button"
          class="w-full rounded-lg bg-gradient-to-b from-[#f5c518] to-[#d4a017] px-8 py-4 text-lg font-bold text-[#1a1a00] shadow-[0_4px_20px_rgba(245,197,24,0.3)] transition-all [text-shadow:0_1px_0px_rgba(255,255,255,0.2)] hover:scale-[1.02] active:scale-[0.98]"
        >
          Get Supplement Ads Now!
        </button>

        <!-- Payment methods -->
        <div class="mx-auto mt-6 max-w-xs text-center">
          <p class="mb-2 text-sm leading-snug text-[#777]">
            Secure checkout - Visa, Mastercard, PayPal & more
          </p>
          <p class="text-sm leading-snug text-[#777]">
            After payment, you get instant access to everything.
          </p>
        </div>
      </div>
    </div>

    <!-- Done-For-You Card -->
    <div class="overflow-hidden rounded-2xl border border-[#2a2a2a] bg-[#131313]">
      <div class="p-6 md:p-10">
        <h3 class="mb-1 font-heading text-xl font-bold tracking-heading text-[#fff] md:text-2xl">
          Done-For-You Creative Pack
        </h3>
        <p class="mb-6 text-sm text-[#777]">
          We build your entire creative system — you just launch the ads
        </p>

        <!-- Price -->
        <div class="mb-2 flex items-baseline gap-3">
          <span class="text-lg text-[#555] line-through">$4,997</span>
          <span class="text-4xl font-bold text-[#fff] md:text-5xl">$2,997</span>
        </div>

        <!-- Urgency -->
        <p class="mb-8 text-sm font-semibold text-cta-yellow">
          Only 3 spots available this month
        </p>

        <!-- Items -->
        <h4 class="mb-4 font-bold text-[#fff]">Here's what happens when you join:</h4>
        <ul class="mb-8 flex flex-col gap-2.5">
          {dfyItems.map((item) => (
            <li class="flex items-center gap-3">
              <svg class="h-4 w-4 flex-shrink-0 text-cta-green" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20 6 9 17l-5-5" />
              </svg>
              <span class="text-[#bbb]">
                <strong class="text-[#fff]">{item}</strong>
              </span>
            </li>
          ))}
        </ul>

        <!-- CTA -->
        <button
          type="button"
          class="w-full rounded-lg bg-gradient-to-b from-[#2ecc71] to-[#27ae60] px-8 py-4 text-lg font-bold text-[#fff] shadow-[0_4px_20px_rgba(46,204,113,0.3)] transition-all hover:scale-[1.02] active:scale-[0.98]"
        >
          Apply for Done-For-You Creative Pack
        </button>

        <p class="mx-auto mt-4 max-w-xs text-center text-sm leading-snug text-[#777]">
          After payment, you'll be redirected to book your strategy call
        </p>
      </div>
    </div>
  </div>
</section>
