---
interface Props {
  variant?: "light" | "dark";
}

const { variant = "light" } = Astro.props;
const isDark = variant === "dark";
---

<div class="mt-6 flex flex-col items-center gap-2">
  <div class="flex gap-0.5">
    {Array.from({ length: 5 }).map(() => (
      <svg class="h-4 w-4 fill-cta-yellow text-cta-yellow" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
      </svg>
    ))}
  </div>
  <p
    class={`max-w-[260px] text-center text-sm leading-snug ${
      isDark ? "text-[#777]" : "text-muted-foreground"
    }`}
  >
    Trusted by 340+ supplement brand owners and media buyers
  </p>
</div>
